---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const scraps = (await getCollection('scrap')).reduce((acc, cur) => {
  const [parent, _] = cur.id.split('/');
  const idx = acc.findIndex((item) => item.name === parent);
  if (idx === -1) {
    acc.push({ name: parent, count: 1, lastUpdated: cur.data.pubDate });
  } else {
    acc[idx].count += 1;
    acc[idx].lastUpdated = acc[idx].lastUpdated.valueOf() - cur.data.pubDate.valueOf() > 0 ? acc[idx].lastUpdated : cur.data.pubDate;
  }  
  return acc;
}, [] as { name:string, count: number, lastUpdated: Date }[]).sort((a, b) => b.lastUpdated.valueOf() - a.lastUpdated.valueOf());
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section>
				<table>
					<tr>
						<th>名前</th>
						<th>数</th>
						<th>最終更新日</th>
					</tr>
					{
						scraps.map((scrap) => (
							<tr>
								<td>
									<a href={`/scrap/${scrap.name}/`}>{scrap.name}</a>
								</td>
								<td>
									<a href={`/scrap/${scrap.name}/`}>{scrap.count}</a>									
								</td>
								<td>
									<FormattedDate date={scrap.lastUpdated} />
								</td>
							</tr>
						))
					}
				</table>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	table {
		border-collapse: collapse;
		width: 100%;
	}
	th {
		text-align: left;
		color: #4493f8;
	}
	tr:nth-child(even) {
		background-color: #151b23;
	}
	tr:not(:first-child):hover {
		background-color: #262c36;
	}

	tr>td:nth-child(3) {
		width: 120px;
	}
	table a {
		color: var(--text-primary);
		text-decoration: none;
	}
</style>

