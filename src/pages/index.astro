---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1>ホーム</h1>
			<div class="c-icon__wrapper">
				<img src="/public/me.webp" alt="kyana0817" />
			</div>
			<section>
				<h2>使用言語</h2>
				<ul>
					<li>HTML/CSS</li>
					<li>JavaScript/TypeScript</li>
					<li>Python3</li>
					<li>PHP</li>
				</ul>
			</section>
			<section>
				<h2>クラウド</h2>
				<ul>
					<li>AWS</li>
					<li>Oracle Cloud</li>
				</ul>
			</section>
			<section>
				<h2>開発環境</h2>
				<ul>
					<li>Windows10/11</li>
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
.c-icon__wrapper {
	display: flex;
	justify-content: center;
	align-items: center;
	width: 240px;
	height: 240px;
	border-radius: 50%;
	border: 2px solid #b2b2b2;
	overflow: hidden;
	margin: 0 auto;
}

</style>
